<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false">
    <appender name="NOOP" class="org.apache.log4j.varia.NullAppender">
    </appender>
    
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[InfraRED] -- %m%n"/>
        </layout>
    </appender>

    <category name="net.sf.infrared.agent" additivity="false">
        <priority value="FATAL"/>
        <appender-ref ref="CONSOLE"/>
    </category>
    
    <category name="net.sf.infrared.base" additivity="false">
        <priority value="FATAL"/>
        <appender-ref ref="CONSOLE"/>
    </category>
    
    <category name="net.sf.infrared.aspects" additivity="false">
        <priority value="FATAL"/>
        <appender-ref ref="CONSOLE"/>
    </category>

	<category name="net.sf.infrared.jboss" additivity="false">
        <priority value="FATAL"/>
        <appender-ref ref="CONSOLE"/>
    </category>
	
	<category name="net.sf.infrared.weblogic" additivity="false">
        <priority value="FATAL"/>
        <appender-ref ref="CONSOLE"/>
    </category>
	
    <root>
        <priority value="FATAL"/>
        <appender-ref ref="NOOP"/>
    </root>
</log4j:configuration>   